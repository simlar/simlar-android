<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/text_black</item>
        <item name="android:windowBackground">@null</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:windowBackground">@null</item>

        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar_background</item>
    </style>

    <!-- Application dialog theme. -->
    <style name="dialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/text_black</item>
        <item name="android:windowBackground">@drawable/border_round_corners</item>

        <!-- Workaround for api level < 11 -->
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textColorSecondary">@color/text_black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/text_black</item>
    </style>

    <!-- Buttons -->
    <style name="buttonWhite" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="callActivityImageButton" parent="@android:style/Widget.Button.Small">
        <item name="android:background">@drawable/call_activity_image_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="buttonWhiteWithIcon" parent="@style/buttonWhite">
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- ConnectionDetailsDialogFragment  -->
    <style name="connectionDetailsDialogFragmentTable" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="connectionDetailsDialogFragmentTableLabel" parent="connectionDetailsDialogFragmentTable">
        <item name="android:gravity">right</item>
    </style>

    <style name="connectionDetailsDialogFragmentTableValue" parent="connectionDetailsDialogFragmentTable">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
