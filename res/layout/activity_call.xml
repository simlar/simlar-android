<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CallActivity" >

    <LinearLayout
        android:id="@+id/linearLayoutCallStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corners" >

        <TextView
            android:id="@+id/textViewCallStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutConnectionQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corners"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/textViewLabelQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_activity_label_quality"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewQuality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text=""
            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingRight="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutConnectionDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/linearLayoutConnectionQuality"
         >

        <ImageButton
            android:id="@+id/buttonConnectionDetails"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            android:contentDescription="@string/call_activity_sound_settings"
            android:onClick="showConnectionDetails"
            android:src="@drawable/info" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAuthenticationToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayoutConnectionQuality"
        android:background="@drawable/border_round_corners"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        <TextView
            android:id="@+id/textViewLabelAuthenticationToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:text="@string/waiting_for_authentication_token"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewAuthenticationToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:text="@string/no_authentication_token"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:baselineAligned="false"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/buttonAuthenticationTokenWrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="wrongAuthenticationToken"
                    android:background="@drawable/border_round_corners"
                    android:textColor="#000000"
                    android:text="@string/button_authentication_token_wrong" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/buttonAuthenticationTokenVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="verifyAuthenticationToken"
                    android:textColor="#000000"
                    android:background="@drawable/border_round_corners"
                    android:text="@string/button_authentication_token_verify" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/ButtonTerminateCall"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_round_corners"
            android:baselineAligned="false"
            android:gravity="center_vertical|center_horizontal" >

            <ImageButton
                android:id="@+id/buttonSoundSettings"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:background="#FFFFFF"
                android:contentDescription="@string/call_activity_sound_settings"
                android:onClick="showSoundSettingsDialog"
                android:src="@drawable/sound_settings" />

            <ImageButton
                android:id="@+id/buttonMicro"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="toggleMicrophoneMuted"
                android:src="@drawable/micro_on"
                android:background="#FFFFFF"
                android:contentDescription="@string/call_activity_microphone_mute"/>

            <ImageButton
                android:id="@+id/buttonSpeaker"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:onClick="toggleSpeakerMuted"
                android:src="@drawable/speaker_off"
                android:background="#FFFFFF"
                android:contentDescription="@string/call_activity_loudspeaker_off"/>
        </LinearLayout>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/ButtonTerminateCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/hang_up"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:onClick="terminateCall"
        android:contentDescription="@string/call_activity_terminate_call"/>
</RelativeLayout>
